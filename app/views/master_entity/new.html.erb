<h1>Add Master Entity</h1>

<%= form_for @entity, :as => :entity, :url => entity_create_path,:html => { :multipart => true}, :method => "post" do |f| %>

<p>
  <label>Entity Name</label><br/>
  <%= f.text_field :entity_name %>
</p>

<p>
  <label>Select_category</label><br/>
  <%= select(:entity, :master_category_id, @category.collect {|p| [p.category_name,p.id]  }, {:prompt => 'Select master_category_'})%>
 <%#= f.select(:entity, :master_category_id, @master_category_array , {:prompt => 'Select Master Category'} ) %>
</p>





<p>
  <label>Information About Entity</label><br/>
  <%= f.text_area :information , :size => "50x10"%>
</p>

<p>
  <label>Address</label><br/>
  <%= f.text_area :address, :size => "50x10"%>
</p>

<p>
  <label>Lat</label><br/>
  <%= f.file_field :entity_image %>
</p>

<p>
  <label>long</label><br/>
  <%= f.text_field :lat %>
</p>

<p>
  <label>long</label><br/>
  <%= f.text_field :longitude %>
</p>

<p>
   <%= f.submit :Submit %>
</p>
<% end %>